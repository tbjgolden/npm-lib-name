{
  "name": "npm-lib-name",
  "version": "0.0.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "bin": {
    "npm-lib-name": "./dist/cli/index.mjs"
  },
  "scripts": {
    "name": "xnr ./.scripts/name.ts",
    "build": "xnr ./.scripts/build.ts",
    "test": "jest -c ./.jestrc.cjs",
    "coverage": "jest -c ./.jestrc.cjs --coverage",
    "watch": "jest -c ./.jestrc.cjs --watch",
    "lint": "eslint lib",
    "types": "tsc --noEmit && echo 'Type-checking passed'",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "easier-node": "^0.0.1-beta.2",
    "esbuild": "^0.14.11",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.6.4",
    "xnr": "^0.4.0-beta.2"
  },
  "files": [
    "dist"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no -- commitlint --edit \"\"",
    "pre-commit": "npx lint-staged",
    "pre-push": "npx jest -o --coverage --passWithNoTests"
  }
}
