{
  "compilerOptions": {
    "target": "es2022",
    "lib": [],
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["typings.d.ts", "cli/**/*.ts", "lib/**/*"]
}
